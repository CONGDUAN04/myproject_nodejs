<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="Laptop Shop Admin" />
    <meta name="author" content="Cong Duan" />
    <title>View Order Detail - Cong Duan</title>

    <!-- Styles -->
    <link
      href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css"
      rel="stylesheet"
    />
    <link href="/admin/css/styles.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>

    <style>
      body {
        background: #f4f6f9;
      }

      .card-modern {
        border-radius: 1rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        border: none;
        background: #fff;
      }

      .page-title {
        font-size: 2rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #2c3e50;
      }

      .page-title i {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        color: #fff;
        padding: 10px;
        border-radius: 12px;
      }

      .custom-breadcrumb {
        background: #fff;
        padding: 10px 15px;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      }

      .custom-breadcrumb .breadcrumb-item a {
        color: #3498db;
        font-weight: 500;
        text-decoration: none;
      }

      .custom-breadcrumb .breadcrumb-item a:hover {
        text-decoration: underline;
        color: #1d6fa5;
      }

      .custom-breadcrumb .breadcrumb-item.active {
        font-weight: 600;
        color: #555;
      }

      table {
        border-radius: 0.75rem;
        overflow: hidden;
      }

      table thead {
        background: linear-gradient(45deg, #f8c471, #f39c12);
        color: #fff;
        font-weight: 600;
      }

      table tbody tr {
        transition: all 0.2s;
      }

      table tbody tr:hover {
        background: #fcf3cf !important;
        box-shadow: inset 2px 0px 0px #f39c12;
      }

      .btn-back {
        background: linear-gradient(45deg, #16a085, #1abc9c);
        border: none;
        font-weight: 600;
        border-radius: 0.75rem;
        color: #fff;
        box-shadow: 0 4px 12px rgba(22, 160, 133, 0.3);
      }

      .btn-back:hover {
        background: linear-gradient(45deg, #138d75, #16a085);
      }

      .img-product {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        object-fit: cover;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
      }
    </style>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>

    <div id="layoutSidenav">
      <%- include('../layout/sidenav'); -%>

      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <!-- Page Title -->
            <h1 class="mt-4 page-title">
              <i class="fa-solid fa-laptop"></i> Manage Order
            </h1>

            <!-- Breadcrumb -->
            <ol class="breadcrumb mb-4 custom-breadcrumb">
              <li class="breadcrumb-item">
                <a href="/admin"><i class="fa-solid fa-house me-1"></i> Dashboard</a>
              </li>
              <li class="breadcrumb-item">
                <a href="/admin/order"><i></i> Orders</a>
              </li>
              <li class="breadcrumb-item active">
                <i class="fa-solid fa-eye me-1"></i> View Details
              </li>
            </ol>

            <!-- Card -->
            <div class="card card-modern p-4">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-semibold mb-0 text-warning">
                  <i class="fa-solid fa-box-open me-2"></i>View Order Detail (ID = <%= id %>)
                </h3>
              </div>

              <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orderDetails.forEach(function(orderDetail) { %>
                      <tr>
                        <td>
                          <img
                            src="/images/product/<%= orderDetail.product.image %>"
                            alt="<%= orderDetail.product.name %>"
                            class="img-product"
                          />
                        </td>
                        <td>
                          <a
                            href="/product/<%= orderDetail.product.id %>"
                            target="_blank"
                            class="fw-semibold text-decoration-none text-dark"
                          >
                            <%= orderDetail.product.name %>
                          </a>
                        </td>
                        <td>
                          <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' })
                            .format(orderDetail.price) %>
                        </td>
                        <td><%= orderDetail.quantity %></td>
                        <td>
                          <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' })
                            .format(orderDetail.price * orderDetail.quantity) %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <div class="mt-4 text-end">
                <a href="/admin/order" class="btn btn-back">
                  <i class="fa-solid fa-arrow-left"></i> Back to Orders
                </a>
              </div>
            </div>
          </div>
        </main>

        <%- include('../layout/footer'); -%>
      </div>
    </div>

    <!-- Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>
  </body>
</html>
