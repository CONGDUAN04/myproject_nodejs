<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register - LaptopShop</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500">
  <div class="w-full max-w-2xl">
    <div class="bg-white/90 backdrop-blur-lg shadow-2xl rounded-2xl p-10 animate-fadeIn">
      
      <!-- Title -->
      <div class="flex flex-col items-center mb-6">
        <div class="w-14 h-14 bg-purple-600 rounded-full flex items-center justify-center shadow-lg mb-3">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
          </svg>
        </div>
        <h1 class="text-3xl font-extrabold text-gray-800">Create Account</h1>
        <p class="text-sm text-gray-500 mt-1">Join LaptopShop today ðŸš€</p>
      </div>

      <!-- Hiá»ƒn thá»‹ lá»—i -->
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <% errors.forEach(function (error) { %>
          <div class="mb-4 rounded-lg bg-red-100 border border-red-300 p-3 text-sm text-red-700 animate-shake">
            <%= error %>
          </div>
        <% }) %>
      <% } %>

      <!-- Form Ä‘Äƒng kÃ½ -->
      <form method="post" action="/register" class="space-y-6">
        
        <!-- Fullname -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Fullname</label>
          <input 
            value="<%= oldData.fullName %>" 
            name="fullName" 
            type="text" 
            placeholder="Your full name"
            class="w-full rounded-xl border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 p-3 transition"
          />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
          <input 
            value="<%= oldData.email %>" 
            name="email" 
            type="email" 
            placeholder="you@example.com"
            class="w-full rounded-xl border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 p-3 transition"
          />
        </div>

        <!-- Password + Confirm Password -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input 
              value="<%= oldData.password %>" 
              name="password" 
              type="password" 
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              class="w-full rounded-xl border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 p-3 transition"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
            <input 
              value="<%= oldData.confirmPassword %>" 
              name="confirmPassword" 
              type="password" 
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              class="w-full rounded-xl border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50 p-3 transition"
            />
          </div>
        </div>

        <!-- Submit -->
        <button 
          type="submit"
          class="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white py-3 px-4 rounded-xl font-semibold shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all"
        >
          Create Account
        </button>
      </form>

      <!-- Footer -->
      <div class="mt-6 text-center text-sm text-gray-600">
        <p>Already have an account? 
          <a href="/login" class="text-purple-600 hover:text-purple-800 font-semibold">
            Login
          </a>
        </p>
      </div>
    </div>
  </div>

  <!-- Animation -->
  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeIn { animation: fadeIn 0.6s ease-out; }
    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      20%, 60% { transform: translateX(-5px); }
      40%, 80% { transform: translateX(5px); }
    }
    .animate-shake { animation: shake 0.4s; }
  </style>
</body>
</html>
